<%= link_to("Back to Cohorts", cohorts_path, :class => 'back-link') %>

<%= bootstrap_form_for @cohortstudent do |f| %>
  <%= f.select :cohort_id, Cohort.all.ids %>
  <%= f.select :student_id, Student.all.ids %>
  <%= f.number_field :grade, :min => 0, :max => 100 %>
  <%= f.select :passing, [true, false]%>
  <%= f.submit("Add Student") %>
<% end %>
