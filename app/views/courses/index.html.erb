<div id="target-for-change">
  <h1>Courses</h1>

  <table class="table table-bordered table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Code</th>
        <th scope="col">Name</th>
        <th scope="col">Tuition</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% x = 0 %>
      <% @courses.each do |c| %>
      <tr>
        <th scope="row"><%= x += 1 %></th>
        <td><%= c.code %></td>
        <td><%= c.name %></td>
        <td><%= c.tuition %></td>
        <td>
          <%= link_to("Show", course_path(c), remote: true) %> |
          <%= link_to("Edit", edit_course_path(c), :class => 'action edit') %> |
          <%= link_to("Delete", course_path(c), method: 'delete', data: { confirm: "Are you sure you want to delete #{c.name}?" }) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>


  <%= link_to("Add New Course", new_course_path, :class => 'action new') %>
</div>
